<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_graphSurface"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <HorizontalScrollView
        android:id="@+id/scrollView_graphSurface"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_low"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.example.trackfield.graphing.GraphView
                android:id="@+id/graphSurface_rec"
                android:layout_width="@dimen/layout_graph_medium"
                android:layout_height="@dimen/layout_graph_medium"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:requiresFadingEdge="horizontal" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView_high"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="high"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_low"
        style="@style/Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="low"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider12"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView_graphSurface"
        app:layout_constraintEnd_toStartOf="@+id/scrollView_graphSurface"
        app:layout_constraintTop_toTopOf="@+id/textView_high" />

</androidx.constraintlayout.widget.ConstraintLayout>