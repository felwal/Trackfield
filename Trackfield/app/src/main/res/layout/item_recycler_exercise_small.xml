<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_recycler_small_50dp"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/v_recycler_item_originmarker"
        android:layout_width="@dimen/layout_marker_origin_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_marker_origin"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recycler_item_exercise_primary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Subtitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Primary"
        style="@style/Widget.Trackfield.TextView" />

    <TextView
        android:id="@+id/tv_recycler_item_exercise_secondary"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Subtitle3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Secondary"
        style="@style/Widget.Trackfield.TextView" />

    <TextView
        android:id="@+id/tv_recycler_item_exercise_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recycler_item_exercise_primary"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Caption"
        app:layout_constraintStart_toStartOf="@+id/tv_recycler_item_exercise_primary"
        app:layout_constraintTop_toBottomOf="@+id/tv_recycler_item_exercise_primary"
        tools:text="Caption"
        style="@style/Widget.Trackfield.TextView" />

    <View
        android:id="@+id/v_recycler_item_recordmarker"
        android:layout_width="@dimen/layout_marker_record_radius"
        android:layout_height="@dimen/layout_marker_record_diameter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_marker_record"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>