<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_recycler_header_month">

    <RelativeLayout
        android:id="@+id/v_recycler_item_header_divider"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.Trackfield.Divider">

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recycler_item_header_primary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/spacing_medium"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Heading2.Month"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Primary"
        style="@style/Widget.Trackfield.TextView" />

    <TextView
        android:id="@+id/tv_recycler_item_header_secondary"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Heading2.HeaderValues"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Secondary"
        style="@style/Widget.Trackfield.TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>