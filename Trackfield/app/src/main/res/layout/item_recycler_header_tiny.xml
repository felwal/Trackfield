<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_recycler_header_week">

    <TextView
        android:id="@+id/tv_recycler_item_header_primary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/spacing_medium"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Trackfield.Caption.Week"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Primary"
        style="@style/Widget.Trackfield.TextView" />

    <TextView
        android:id="@+id/tv_recycler_item_header_secondary"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:gravity="center"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.Trackfield.Subtitle3.HeaderValues"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Secondary"
        style="@style/Widget.Trackfield.TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>