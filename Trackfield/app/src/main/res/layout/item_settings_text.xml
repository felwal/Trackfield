<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_settings_item"
    style="SettingCl">

    <TextView
        android:id="@+id/tv_settings_item_text_title"
        android:layout_marginStart="@dimen/spacing_small"
        android:textAppearance="@style/TextAppearance.Trackfield.Subtitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title"
        style="@style/Widget.Trackfield.TextView" />

    <TextView
        android:id="@+id/tv_settings_item_text_value"
        android:layout_marginEnd="@dimen/spacing_small"
        android:textAppearance="@style/TextAppearance.Trackfield.Subtitle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Value"
        style="@style/Widget.Trackfield.TextView" />

    <View
        android:id="@+id/v_settings_item_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.Trackfield.Divider" />

</androidx.constraintlayout.widget.ConstraintLayout>