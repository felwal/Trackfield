<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <TextView
        android:id="@+id/textView_s"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:fontFamily="sans-serif-condensed"
        android:text="s"
        android:textColor="@color/colorAccBlue"
        android:textSize="@dimen/type_heading1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_distance_sub"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="km"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="@dimen/type_heading1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_s"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_t"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="t"
        android:textColor="@color/colorAccTurqoise"
        android:textSize="@dimen/type_heading1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_distance_sub"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_hours_sub"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="hh"
        android:inputType="number"
        android:maxLength="2"
        android:text="0"
        android:textSize="@dimen/type_heading1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_t"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_minutes_sub"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="mm"
        android:inputType="number"
        android:maxLength="2"
        android:text="0"
        android:textSize="@dimen/type_heading1"
        app:layout_constraintBottom_toBottomOf="@+id/editText_hours_sub"
        app:layout_constraintStart_toEndOf="@+id/editText_hours_sub"
        app:layout_constraintTop_toTopOf="@+id/editText_hours_sub" />

    <EditText
        android:id="@+id/editText_seconds_sub"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ss"
        android:inputType="number|numberDecimal"
        android:maxLength="5"
        android:text="0"
        android:textSize="@dimen/type_heading1"
        app:layout_constraintBottom_toBottomOf="@+id/editText_minutes_sub"
        app:layout_constraintStart_toEndOf="@+id/editText_minutes_sub"
        app:layout_constraintTop_toTopOf="@+id/editText_minutes_sub" />

    <Button
        android:id="@+id/button_removeSub"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>