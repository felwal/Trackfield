<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_s"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:text="s"
        android:textColor="@color/colorAccBlue"
        android:textSize="@dimen/type_heading2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_distance"
        style="@style/Heading2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="distance"
        app:layout_constraintBottom_toBottomOf="@+id/textView_s"
        app:layout_constraintStart_toEndOf="@+id/textView_s"
        app:layout_constraintTop_toTopOf="@+id/textView_s" />

    <TextView
        android:id="@+id/textView_t"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:text="t"
        android:textColor="@color/colorAccTurqoise"
        android:textSize="@dimen/type_heading2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_distance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_time"
        style="@style/Heading2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="@+id/textView_t"
        app:layout_constraintStart_toEndOf="@+id/textView_t"
        app:layout_constraintTop_toTopOf="@+id/textView_t" />

    <TextView
        android:id="@+id/textView_v"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:text="v"
        android:textColor="@color/colorAccGreen"
        android:textSize="@dimen/type_heading2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_velocity"
        style="@style/Heading2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:text="pace"
        app:layout_constraintBottom_toBottomOf="@+id/textView_v"
        app:layout_constraintStart_toEndOf="@+id/textView_v"
        app:layout_constraintTop_toTopOf="@+id/textView_v" />

</androidx.constraintlayout.widget.ConstraintLayout>