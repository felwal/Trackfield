<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- dark theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <!-- text -->
        <item name="android:textColorSecondary">@color/text_secondary_dk</item>

        <!-- primary -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/fw_white</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorSecondary">@color/colorGreenLight</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- control -->
        <item name="colorControlNormal">@color/text_secondary_dk</item>

        <!-- widget -->
        <item name="chipBackgroundColor">@color/colorGreenDarker</item>
        <item name="chipSurfaceColor">@color/fw_grey13</item>

        <!-- quantity colors -->
        <item name="colorDistance">@color/colorQuantityBlue</item>
        <item name="colorRoute">@color/colorQuantityRed</item>
        <item name="colorRoutevar">@color/colorQuantityRed</item>
        <item name="colorPlace">@color/colorQuantityOrange</item>
        <item name="colorInterval">@color/colorQuantityPurple</item>
        <item name="colorTime">@color/colorQuantityTurqoise</item>
        <item name="colorPace">@color/colorQuantityGreen</item>
        <item name="colorEnergy">@color/colorQuantityYellow</item>
        <item name="colorPower">@color/colorQuantityOrange</item>
        <item name="colorElevation">@color/colorQuantityRed</item>

        <!-- medal colors -->
        <item name="colorGold">@color/colorGold</item>
        <item name="colorSilver">@color/colorSilver</item>
        <item name="colorBronze">@color/colorBronze</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker.Dark</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Dark</item>
        <item name="mapStyle">@string/mapstyle_dark_json</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorToolbar">?colorPrimary</item>
        <item name="colorOnToolbar">?colorOnPrimary</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="colorToolbar">?colorSurface</item>
        <item name="colorOnToolbar">?android:textColorPrimary</item>
    </style>

</resources>