<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- dark theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <item name="android:windowLightStatusBar">false</item>

        <!-- text -->
        <item name="android:textColorPrimary">@color/fw_white</item>
        <item name="android:textColorSecondary">@color/text_secondary_dk</item>
        <item name="android:textColorHighlight">@color/colorGreenLight</item>
        <item name="android:textColorPrimaryInverse">@color/fw_black</item>

        <!-- primary -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorPrimaryVariant">@color/colorGreenLight</item>
        <item name="colorOnPrimary">@color/fw_white</item>

        <!-- accent -->
        <item name="colorAccent">@color/colorGreenLight</item>

        <!-- background -->
        <item name="android:colorBackgroundFloating">@color/fw_felwal_surface_dk</item>

        <!-- widget -->
        <item name="android:colorButtonNormal">@color/fw_grey19</item>
        <item name="android:colorActivatedHighlight">@color/colorGreenLight</item>
        <item name="chipBackgroundColor">@color/colorGreenDarker</item>
        <item name="chipSurfaceColor">@color/fw_grey13</item>

        <!-- TODO: whats this? -->
        <item name="color">@color/colorGreenDarker</item>

        <item name="mapStyle">@string/mapstyle_dark_json</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker.Dark</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Dark</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <!-- primary -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorOnPrimary">@color/fw_white</item>

        <!-- accent -->
        <item name="colorAccent">@color/colorGreenLight</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <!-- primary -->
        <item name="colorPrimary">@color/fw_grey19</item>
        <item name="colorPrimaryDark">@color/fw_grey13</item>
        <item name="colorOnPrimary">@color/fw_white</item>

        <!-- accent -->
        <item name="colorAccent">@color/colorGreenLight</item>
    </style>

</resources>