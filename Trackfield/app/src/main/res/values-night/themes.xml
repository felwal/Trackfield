<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- dark theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <!-- primary -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorOnPrimary">@color/fw_white</item>
        <item name="colorPrimaryDark">@color/green_800</item>
        <item name="colorSecondary">@color/green_400</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- widget -->
        <item name="chipBackgroundColor">@color/green_900</item>
        <item name="chipSurfaceColor">@color/fw_grey_13</item>

        <!-- quantity colors -->
        <item name="tf_colorPlace">@color/fw_material_orange_deep_400</item>
        <item name="tf_colorRoute">@color/fw_material_red_400</item>
        <item name="tf_colorRoutevar">@color/fw_material_pink_400</item>
        <item name="tf_colorInterval">@color/fw_material_purple_deep_300</item>
        <item name="tf_colorDistance">@color/fw_material_blue_400</item>
        <item name="tf_colorTime">@color/fw_material_teal_400</item>
        <item name="tf_colorPace">@color/fw_material_green_400</item>
        <item name="tf_colorEnergy">@color/fw_material_yellow_400</item>
        <item name="tf_colorPower">@color/fw_material_orange_400</item>
        <item name="tf_colorElevation">@color/fw_material_orange_deep_400</item>

        <!-- medal colors -->
        <item name="tf_colorGold">@color/fw_material_yellow_200</item>
        <item name="tf_colorSilver">@color/fw_material_grey_200</item>
        <item name="tf_colorBronze">@color/fw_material_orange_deep_200</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Dark</item>
        <item name="tf_mapStyle">@string/mapstyle_dark_json</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="tf_colorToolbar">?colorPrimary</item>
        <item name="tf_colorOnToolbar">?colorOnPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
        <item name="tf_colorTextIndicatorOnToobar">@android:color/white</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="tf_colorToolbar">?colorSurface</item>
        <item name="tf_colorOnToolbar">?android:textColorPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
        <item name="tf_colorTextIndicatorOnToobar">?colorPrimary</item>

        <!-- primary -->
        <item name="colorPrimary">@color/green_400</item>
        <item name="colorOnPrimary">?android:colorBackground</item>
        <item name="colorPrimaryDark">@color/green_600</item>
    </style>

</resources>