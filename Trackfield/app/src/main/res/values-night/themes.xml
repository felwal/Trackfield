<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- dark theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <!-- primary -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/fw_white</item>
        <item name="colorPrimaryDark">@color/green_dk</item>
        <item name="colorSecondary">@color/green_lt</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- widget -->
        <item name="chipBackgroundColor">@color/green_dr</item>
        <item name="chipSurfaceColor">@color/fw_grey_13</item>

        <!-- quantity colors -->
        <item name="tf_colorPlace">@color/orange_deep_lt</item>
        <item name="tf_colorRoute">@color/red_lt</item>
        <item name="tf_colorRoutevar">@color/pink_lt</item>
        <item name="tf_colorInterval">@color/purple_deep_lt</item>
        <item name="tf_colorDistance">@color/blue_lt</item>
        <item name="tf_colorTime">@color/teal_lt</item>
        <item name="tf_colorPace">@color/green_lt</item>
        <item name="tf_colorEnergy">@color/yellow_lt</item>
        <item name="tf_colorPower">@color/orange_lt</item>
        <item name="tf_colorElevation">@color/orange_deep_lt</item>
        <item name="tf_colorHeartrate">@color/red</item>
        <item name="tf_colorNote">@color/brown_lt</item>
        <item name="tf_colorDate">@color/grey_blue_lt</item>
        <item name="tf_colorMisc">?colorControlNormal</item>

        <!-- medal colors -->
        <item name="tf_colorGold">@color/gold_lt</item>
        <item name="tf_colorSilver">@color/silver_lt</item>
        <item name="tf_colorBronze">@color/bronze_lt</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Dark</item>
        <item name="tf_mapStyle">@string/mapstyle_dark_json</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="tf_colorToolbar">?colorPrimary</item>
        <item name="tf_colorOnToolbar">?colorOnPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
        <item name="tf_colorTextIndicatorOnToobar">@android:color/white</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="tf_colorToolbar">?colorSurface</item>
        <item name="tf_colorOnToolbar">?android:textColorPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
        <item name="tf_colorTextIndicatorOnToobar">?colorPrimary</item>

        <!-- primary -->
        <item name="colorPrimary">@color/green_lt</item>
        <item name="colorOnPrimary">?android:colorBackground</item>
        <item name="colorPrimaryDark">@color/green</item>

        <!-- quantity colors -->
        <item name="tf_colorPlace">?colorControlNormal</item>
        <item name="tf_colorRoute">?colorControlNormal</item>
        <item name="tf_colorRoutevar">?colorControlNormal</item>
        <item name="tf_colorInterval">?colorControlNormal</item>
        <item name="tf_colorDistance">?colorControlNormal</item>
        <item name="tf_colorTime">?colorControlNormal</item>
        <item name="tf_colorPace">?colorControlNormal</item>
        <item name="tf_colorEnergy">?colorControlNormal</item>
        <item name="tf_colorPower">?colorControlNormal</item>
        <item name="tf_colorElevation">?colorControlNormal</item>
        <item name="tf_colorNote">?colorControlNormal</item>
        <item name="tf_colorDate">?colorControlNormal</item>
        <item name="tf_colorMisc">?colorControlNormal</item>
    </style>

</resources>