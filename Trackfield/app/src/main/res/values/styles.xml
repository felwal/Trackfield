<resources>

    <!-- themes -->

    <style name="AppTheme">
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>-->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- text -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorGrey7</item>
        <item name="android:textColorHighlight">@color/colorGreenLight</item>

        <!-- primary -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryVariant">@color/colorGreenLight</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenLight</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="chipBackgroundColor">@color/colorGreenDarker</item>
        <item name="chipSurfaceColor">@color/colorGrey1</item>

        <!-- elements -->
        <item name="android:colorBackground">@color/colorGrey1</item>
        <item name="colorSurface">@color/colorGrey3</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="android:colorBackgroundFloating">@color/colorGrey3</item>
        <item name="android:colorButtonNormal">@color/colorGrey3</item>
        <item name="android:colorActivatedHighlight">@color/colorGreenLight</item>
        <item name="panelBackground">@color/colorGrey2</item>

        <!-- ta bort -->
        <item name="colorOnSurface">@color/colorGrey7</item>
        <item name="colorOnBackground">@color/colorGrey5</item>
        <item name="strokeColor">@color/colorGrey4</item>
        <item name="color">@color/colorGreenDarker</item>

        <!-- other items -->
        <item name="textAllCaps">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!--<item name="android:datePickerDialogTheme">@style/DatePickerDialogThemeDark</item>-->
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorGrey6</item>
        <item name="android:textColorHighlight">@color/colorGreen</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
        <item name="textAllCaps">false</item>

        <item name="colorPrimaryVariant">@color/colorGreen</item>
        <item name="chipBackgroundColor">@color/colorGreenLighter</item>
        <item name="chipSurfaceColor">@color/colorGrey9</item>

        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:colorBackgroundFloating">@color/colorWhite</item>
        <item name="android:colorButtonNormal">@color/colorWhite</item>
        <item name="android:colorActivatedHighlight">@color/colorGreen</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogThemeLight</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorGrey6</item>
        <item name="colorOnBackground">@color/colorGrey8</item>

        <item name="strokeColor">@color/colorGrey8</item>
        <item name="panelBackground">@color/colorGrey9</item>

        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="AppTheme.Dark.Green" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenLight</item>
    </style>

    <style name="AppTheme.Light.Green" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenLight</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Dark.Mono" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorGrey3</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorGrey1</item>
        <item name="colorAccent">@color/colorGreenLight</item>
    </style>

    <style name="AppTheme.Light.Mono" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorGreenLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Dark.Green">
        <item name="colorPrimaryDark">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>


    <!-- styles -->

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elev_toolbar</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/elev_navbar</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextColor">@drawable/selector_nav_color</item>
        <item name="itemIconTint">@drawable/selector_nav_color</item>
        <item name="menu">@menu/menu_navbar</item>
    </style>

    <style name="Fab">
        <item name="android:elevation">@dimen/elev_fab</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">normal</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <!--<item name="rippleColor">@color/colorRipple</item>-->
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="elevation">0dp</item>
        <item name="tabIndicator">@drawable/shape_tabindicator</item>
        <item name="tabIndicatorHeight">@dimen/layout_tabindicator_height</item>
        <item name="tabIndicatorFullWidth">false</item>

        <item name="tabTextAppearance">@style/TabTitle</item>
        <item name="tabSelectedTextColor">?android:attr/textColorHighlight</item>
    </style>

    <style name="FabMini">
        <item name="android:elevation">@dimen/elev_fab</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">mini</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_divider</item>
        <item name="android:background">?attr/colorOnBackground</item>
    </style>

    <style name="GraphElement">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="SettingCl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_setting</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DatePickerDialogThemeDark" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="DatePickerDialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="ToolbarTheme">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="DialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/shape_dialog_bg</item>
    </style>

    <style name="Chip" parent="Theme.MaterialComponents.DayNight">
        <item name="chipBackgroundColor">@drawable/selector_chip_color</item>
        <item name="android:textColor">@drawable/selector_chip_text_color</item>

        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconEnabled">false</item>
    </style>

    <!-- text -->

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Headline" parent="Text">
        <item name="android:textSize">@dimen/type_headline</item>
    </style>

    <style name="Heading1" parent="Text">
        <item name="android:textSize">@dimen/type_heading1</item>
    </style>

    <style name="HeadingSetting" parent="Text">
        <item name="android:textSize">@dimen/type_heading_setting</item>
    </style>

    <style name="Heading2" parent="Text">
        <item name="android:textSize">@dimen/type_heading2</item>
    </style>

    <style name="TabTitle" parent="Text">
        <item name="android:textSize">@dimen/type_title_tab</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogTitle" parent="Text">
        <item name="android:textSize">@dimen/type_dialog_title</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="DialogMessageLone" parent="Text">
        <item name="android:textSize">@dimen/type_dialog_title</item>
    </style>

    <style name="DialogMessage" parent="Text">
        <item name="android:textSize">@dimen/type_dialog_message</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Body" parent="Text">
        <item name="android:textSize">@dimen/type_body</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Caption" parent="Text">
        <item name="android:textSize">@dimen/type_caption</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Overline" parent="Text">
        <item name="android:textSize">@dimen/type_overline</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <!--<item name="textAllCaps">true</item>-->
    </style>

    <style name="Year" parent="Heading1">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Month" parent="Heading2">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Summary" parent="Heading2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Sorter" parent="Heading2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewDate" parent="Heading2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="RecYear" parent="Caption">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingOverline" parent="Overline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_settingSection</item>
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:gravity">bottom</item>
    </style>


    <!-- animations -->

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_open_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_open_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_open_exit</item>
    </style>

    <style name="AppTheme.Dark.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.Green.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.Green.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>

































