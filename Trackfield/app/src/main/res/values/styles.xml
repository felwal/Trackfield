<resources>

    <!-- toolbar -->

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elev_toolbar</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>

        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="ToolbarTheme">
        <!-- built-in action buttons, e.g. home/up -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- custom action buttons -->
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <!-- fab -->

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elev_fab</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>

        <item name="fabSize">normal</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="tint">?android:textColorPrimaryInverse</item>
        <!--<item name="rippleColor">@color/colorGreenDarker</item>-->
    </style>

    <style name="Fab.Mini">
        <item name="fabSize">mini</item>
    </style>

    <!-- edit text -->

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/type_heading1</item>
        <item name="android:focusedByDefault">false</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <style name="EditText.Small">
        <item name="android:textSize">@dimen/type_heading2</item>
    </style>

    <!-- other components -->

    <style name="Navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/elev_navbar</item>
        <item name="android:background">?attr/colorSurface</item>

        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextColor">@drawable/selector_nav_color</item>
        <item name="itemIconTint">@drawable/selector_nav_color</item>
        <item name="menu">@menu/menu_navbar_main</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="elevation">0dp</item>
        <item name="tabIndicator">@drawable/shape_indicator_tab</item>
        <item name="tabIndicatorHeight">@dimen/layout_indicator_tab_height</item>
        <item name="tabIndicatorFullWidth">false</item>

        <item name="tabTextAppearance">@style/TextView.TabTitle</item>
        <item name="tabSelectedTextColor">?android:attr/textColorHighlight</item>
    </style>

    <style name="Chip" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_chip_text_color</item>
        <item name="android:textAppearance">@style/TextView.Body</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>

        <item name="chipBackgroundColor">@drawable/selector_chip_color</item>
        <item name="closeIconEnabled">false</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <!-- composite -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_divider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_settings_item</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- date picker -->

    <style name="DatePickerDialogTheme.Dark" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle.Dark</item>
        <item name="android:colorAccent">@color/colorGreenLight</item>
        <item name="android:colorBackground">@color/colorGrey3</item>
        <!--<item name="android:textColorSecondary">@color/colorGrey7</item>-->
    </style>

    <style name="DatePickerDialogTheme.Light" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle.Light</item>
        <item name="android:colorAccent">@color/colorGreen</item>
        <item name="android:textColorSecondary">@color/colorGrey6</item>
    </style>

    <style name="DatePickerStyle.Dark" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorGreen</item>
    </style>

    <style name="DatePickerStyle.Light" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorGreen</item>
    </style>

    <!-- time picker -->

    <style name="TimePickerDialogTheme.Dark" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerStyle.Dark</item>
        <item name="android:colorAccent">@color/colorGreenLight</item>
        <item name="android:colorBackground">@color/colorGrey3</item>
        <!--<item name="android:textColorSecondary">@color/colorGrey7</item>-->
    </style>

    <style name="TimePickerDialogTheme.Light" parent="android:Theme.Material.Light.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerStyle.Light</item>
        <item name="android:colorAccent">@color/colorGreen</item>
        <item name="android:textColorSecondary">@color/colorGrey6</item>
    </style>

    <style name="TimePickerStyle.Dark" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/colorGreen</item>
        <item name="android:numbersBackgroundColor">@color/colorGrey4</item>
    </style>

    <style name="TimePickerStyle.Light" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/colorGreen</item>
    </style>

    <!-- text view -->

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextView.Headline">
        <item name="android:textSize">@dimen/type_headline2</item>
    </style>

    <style name="TextView.Heading1">
        <item name="android:textSize">@dimen/type_heading1</item>
    </style>

    <style name="TextView.HeadingSetting">
        <item name="android:textSize">@dimen/type_heading_setting</item>
    </style>

    <style name="TextView.Heading2">
        <item name="android:textSize">@dimen/type_heading2</item>
    </style>

    <style name="TextView.TabTitle">
        <item name="android:textSize">@dimen/type_title_tab</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.DialogTitle">
        <item name="android:textSize">@dimen/type_dialog_title</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextView.DialogMessageLone">
        <item name="android:textSize">@dimen/type_dialog_title</item>
    </style>

    <style name="TextView.DialogMessage">
        <item name="android:textSize">@dimen/type_dialog_message</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView.Body">
        <item name="android:textSize">@dimen/type_body</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView.ValueLetter">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/type_heading1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Body.FabTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Caption">
        <item name="android:textSize">@dimen/type_caption</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView.Overline">
        <item name="android:textSize">@dimen/type_overline</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>

        <item name="textAllCaps">true</item>
    </style>

    <style name="TextView.Heading1.Year">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Heading2.Month">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Heading2.HeaderValues">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="TextView.Heading2.Sorter">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Heading2.ViewDate">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextView.Caption.RecYear" parent="TextView.Caption">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Overline.SettingHeader" parent="TextView.Overline">
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- app themes (?) -->

    <style name="AppTheme.Dark.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.Green.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.Green.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>