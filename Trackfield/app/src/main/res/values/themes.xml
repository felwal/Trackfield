<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme -->

    <style name="Theme.Default" parent="Theme.Felwal">
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>-->

        <!-- make actv window appear above keyboard -->
        <!--<item name="android:windowSoftInputMode">stateHidden|adjustResize</item>-->

        <!-- settings -->
        <item name="fw_settingHeaderTextAppearance">@style/TextAppearance.Trackfield.Subtitle3.Month</item>
        <item name="fw_settingItemTextAppearance">@style/TextAppearance.Trackfield.Subtitle2</item>
        <item name="fw_settingDescTextAppearance">@style/TextAppearance.Trackfield.Body</item>
        <item name="fw_settingItemIconTint">?colorControlNormal</item>

        <!-- style -->
        <item name="android:textViewStyle">@style/Widget.Trackfield.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Trackfield.EditText</item>
        <item name="chipStandaloneStyle">@style/Widget.Trackfield.Chip</item>

        <!-- theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Trackfield.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Trackfield.ActionBarPopup</item>
        <item name="textInputStyle">@style/Widget.Trackfield.TextInputLayout.OutlinedBox</item>
        <item name="fw_floatingActionMenuTheme">@style/ThemeOverlay.Trackfield.Fam</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <!-- primary -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/fw_white</item>
        <item name="colorPrimaryDark">@color/green_dk</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/fw_white</item>

        <!-- widget -->
        <item name="chipBackgroundColor">@color/green_lr</item>
        <item name="chipSurfaceColor">@color/grey_96</item>

        <!-- quantity colors -->
        <item name="tf_colorPlace">@color/orange_deep</item>
        <item name="tf_colorRoute">@color/red</item>
        <item name="tf_colorRoutevar">@color/pink</item>
        <item name="tf_colorInterval">@color/purple_deep</item>
        <item name="tf_colorDistance">@color/blue</item>
        <item name="tf_colorTime">@color/teal</item>
        <item name="tf_colorPace">@color/green</item>
        <item name="tf_colorEnergy">@color/yellow</item>
        <item name="tf_colorPower">@color/orange</item>
        <item name="tf_colorElevation">@color/orange_deep</item>
        <item name="tf_colorHeartrate">@color/red</item>
        <item name="tf_colorNote">@color/brown</item>
        <item name="tf_colorDate">@color/blue</item>
        <item name="tf_colorMisc">?colorControlNormal</item>

        <!-- medal colors -->
        <item name="tf_colorGold">@color/gold</item>
        <item name="tf_colorSilver">@color/silver</item>
        <item name="tf_colorBronze">@color/bronze</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Light</item>
        <item name="tf_mapStyle">@string/mapstyle_light_json</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="tf_colorToolbar">?colorPrimary</item>
        <item name="tf_colorOnToolbar">?colorOnPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondaryInverse</item>
        <item name="tf_colorTextIndicatorOnToobar">@color/green_lr</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="tf_colorToolbar">?android:colorBackground</item>
        <item name="tf_colorOnToolbar">?android:textColorPrimary</item>
        <item name="tf_colorControlToolbar">?tf_colorOnToolbar</item>
        <item name="tf_colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
        <item name="tf_colorTextIndicatorOnToobar">?colorPrimary</item>
    </style>

    <!-- other -->

    <style name="Theme.Trackfield.Splash" parent="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>

        <item name="android:windowBackground">@drawable/layer_splash</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
    </style>

    <style name="Theme.Trackfield.OssLicenses" parent="Theme.AppCompat.Light.DarkActionBar" />

</resources>