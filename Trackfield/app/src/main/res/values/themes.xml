<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme -->

    <style name="Theme.Default" parent="Theme.Felwal">
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnimation</item>-->

        <!-- make actv window appear above keyboard -->
        <!--<item name="android:windowSoftInputMode">stateHidden|adjustResize</item>-->

        <!-- settings -->
        <item name="fw_settingHeaderTextAppearance">@style/TextAppearance.Trackfield.Subtitle3.Month</item>
        <item name="fw_settingItemTextAppearance">@style/TextAppearance.Trackfield.Subtitle2</item>
        <item name="fw_settingDescTextAppearance">@style/TextAppearance.Trackfield.Body</item>
        <item name="fw_settingItemIconTint">?colorControlNormal</item>

        <!-- style -->
        <item name="android:textViewStyle">@style/Widget.Trackfield.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Trackfield.EditText</item>
        <item name="chipStandaloneStyle">@style/Widget.Trackfield.Chip</item>

        <!-- theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Trackfield.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Trackfield.ActionBarPopup</item>
        <item name="fw_floatingActionMenuTheme">@style/ThemeOverlay.Trackfield.Fam</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Trackfield" parent="Theme.Default">
        <!-- primary -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/fw_white</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/fw_white</item>

        <!-- widget -->
        <item name="chipBackgroundColor">@color/green_lighter</item>
        <item name="chipSurfaceColor">@color/grey_96</item>

        <!-- quantity colors -->
        <item name="colorDistance">@color/quantity_blue_dark</item>
        <item name="colorRoute">@color/quantity_red_dark</item>
        <item name="colorRoutevar">@color/quantity_red_dark</item>
        <item name="colorPlace">@color/quantity_orange_dark</item>
        <item name="colorInterval">@color/quantity_purple_dark</item>
        <item name="colorTime">@color/quantity_turqoise_dark</item>
        <item name="colorPace">@color/quantity_green_dark</item>
        <item name="colorEnergy">@color/quantity_yellow_dark</item>
        <item name="colorPower">@color/quantity_orange_dark</item>
        <item name="colorElevation">@color/quantity_red_dark</item>

        <!-- medal colors -->
        <item name="colorGold">@color/gold_dark</item>
        <item name="colorSilver">@color/silver_dark</item>
        <item name="colorBronze">@color/bronze_dark</item>

        <!-- theme -->
        <item name="android:datePickerDialogTheme">@style/ThemeOverlay.Trackfield.DatePicker.Light</item>
        <item name="android:timePickerDialogTheme">@style/ThemeOverlay.Trackfield.TimePicker.Light</item>
        <item name="mapStyle">@string/mapstyle_light_json</item>
    </style>

    <!-- color combinations -->

    <style name="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorToolbar">?colorPrimary</item>
        <item name="colorOnToolbar">?colorOnPrimary</item>
        <item name="colorControlToolbar">?colorOnToolbar</item>
        <item name="colorTextSecondaryOnToolbar">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Theme.Trackfield.Mono">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="colorToolbar">?android:colorBackground</item>
        <item name="colorOnToolbar">?android:textColorPrimary</item>
        <item name="colorControlToolbar">?colorOnToolbar</item>
        <item name="colorTextSecondaryOnToolbar">?android:textColorSecondary</item>
    </style>

    <!-- other -->

    <style name="Theme.Trackfield.Splash" parent="Theme.Trackfield.Green">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>

        <item name="android:windowBackground">@drawable/layer_splash</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
    </style>

</resources>